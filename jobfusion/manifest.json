{
  "manifest_version": 3,
  "name": "Resonance",
  "version": "1.0.0",
  "description": "Where your skills and passions resonate. Analyze job postings against your profile for instant matching scores.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://weworkremotely.com/*",
    "https://remoteok.com/*",
    "https://wellfound.com/*",
    "https://www.flexjobs.com/*",
    "https://himalayas.app/*",
    "https://*.ycombinator.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://weworkremotely.com/*",
        "https://remoteok.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}